        <TextBox x:Name="gerente_textbox" Margin="90,47,256,28" Grid.Row="1"/>
        <Button Content="Adicionar" Height="33" VerticalAlignment="Center" HorizontalAlignment="Center" Name="adicionar_button" Width="89" Click="adicionar_button_Click" Margin="324,3,256,-33" Grid.Row="2" />
